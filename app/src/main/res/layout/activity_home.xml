<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary">
    </android.support.v7.widget.Toolbar>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_sleep_button"
        android:text="@string/home_sleep_button"
        android:layout_above="@+id/home_attention_button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_attention_button"
        android:id="@+id/home_attention_button"
        android:layout_above="@+id/home_statistics_button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_statistics_button"
        android:id="@+id/home_statistics_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/home_default_welcome_text"
        android:id="@+id/home_welcome_text"
        android:layout_below="@+id/toolbar"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_default_last_sleep_text"
        android:id="@+id/home_last_sleep_text"
        android:layout_below="@+id/home_welcome_text"
        android:layout_alignParentStart="true"
        android:padding="@dimen/activity_vertical_margin" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/home_default_average_sleep_text"
        android:id="@+id/home_average_sleep_text"
        android:layout_below="@+id/home_last_sleep_text"
        android:layout_alignParentStart="true"
        android:padding="@dimen/activity_vertical_margin" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/home_default_last_score_text"
        android:id="@+id/home_last_score_text"
        android:layout_below="@+id/home_average_sleep_text"
        android:layout_alignParentStart="true"
        android:padding="@dimen/activity_vertical_margin" />

</RelativeLayout>